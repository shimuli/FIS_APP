<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentProfile"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/homepagebackground">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="84dp"
            android:layout_height="72dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/fairmontslogo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/Profile_student_Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/nunito_extralight"
            android:textColor="@android:color/black"
            android:text="Student Name"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

     <TextView
            android:id="@+id/Profile_student_admission_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/nunito_extralight"
            android:text="Admission_no"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Profile_student_Name" />

    </android.support.constraint.ConstraintLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="System Enrolled"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/nunito_extralight"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
                <TextView
                    android:paddingStart="10dp"
                    android:id="@+id/Profile_student_system"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="British/ Kenyan"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/nunito_extralight"
                    android:textSize="18sp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student Class"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/nunito_extralight"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
                <TextView
                    android:paddingStart="10dp"
                    android:id="@+id/Profile_student_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Class"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/nunito_extralight"
                    android:textSize="18sp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date of Birth"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/nunito_extralight"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
                <TextView
                    android:paddingStart="10dp"
                    android:id="@+id/Profile_student_dob"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dob"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/nunito_extralight"
                    android:textSize="18sp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/nunito_extralight"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:paddingStart="10dp"
                    android:id="@+id/Profile_student_gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="gender"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/nunito_extralight"
                    android:textSize="18sp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Home Address"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/nunito_extralight"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:paddingStart="10dp"
                    android:id="@+id/Profile_student_home_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="home"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/nunito_extralight"
                    android:textSize="18sp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/backgroundcolor"
                    android:text="Parents Details"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:fontFamily="@font/nunito_extralight"
                    android:padding="10dp"
                    android:textSize="20sp"/>

                <TextView
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/parent_s_name"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/nunito_extralight"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:paddingStart="10dp"
                    android:id="@+id/Profile_student_parent_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/nunito_extralight"
                    android:textSize="18sp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/other_parent_s_name"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/nunito_extralight"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:paddingStart="10dp"
                    android:id="@+id/Profile_student_other_parent_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/nunito_extralight"
                    android:textSize="18sp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/parent_s_id_no"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/nunito_extralight"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:paddingStart="10dp"
                    android:id="@+id/Profile_student_parent_id_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/number"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/nunito_extralight"
                    android:textSize="18sp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/other_parent_s_id_no"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/nunito_extralight"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:paddingStart="10dp"
                    android:id="@+id/Profile_student_other_parent_id_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/number"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/nunito_extralight"
                    android:textSize="18sp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/parent_s_contact"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/nunito_extralight"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:paddingStart="10dp"
                    android:id="@+id/Profile_student_parent_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contact"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/nunito_extralight"
                    android:textSize="18sp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/other_parent_s_contact"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/nunito_extralight"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:paddingStart="10dp"
                    android:id="@+id/Profile_student_other_parent_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contact"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/nunito_extralight"
                    android:textSize="18sp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/backgroundcolor"
                    android:text="@string/guardian_s_details"
                    android:textStyle="bold"
                    android:fontFamily="@font/nunito_extralight"
                    android:padding="10dp"
                    android:textSize="20sp"
                    android:textColor="@color/colorWhite"
                    />

                <TextView
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/guardian_s_name"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/nunito_extralight"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:paddingStart="10dp"
                    android:id="@+id/Profile_student_guardian_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contact"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/nunito_extralight"
                    android:textSize="18sp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/guardian_s_contact"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/nunito_extralight"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:paddingStart="10dp"
                    android:id="@+id/Profile_student_guardian_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contact"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/nunito_extralight"
                    android:textSize="18sp"
                    android:layout_marginBottom="5dp"/>

                <TextView
                    android:paddingStart="10dp"
                    android:paddingTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/guardian_s_id_no"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/nunito_extralight"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

                <TextView
                    android:paddingStart="10dp"
                    android:id="@+id/Profile_student_guardian_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/contact"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/nunito_extralight"
                    android:textSize="18sp"
                    android:layout_marginBottom="15dp"/>

            </LinearLayout>

        </ScrollView>
</LinearLayout>